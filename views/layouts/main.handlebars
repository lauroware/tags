<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{title}}</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
      crossorigin="anonymous"
    />
    <base href="/" />
    <link rel="stylesheet" href="css/{{style}}" />
    <style>
      /* Estilo para el fondo negro del navbar */ .navbar { background-color:
      #000; } /* Estilo para los enlaces de la izquierda */ .navbar-nav
      .nav-link { color: white; padding: 10px 20px; } /* Estilos personalizados
      para los enlaces cuando el mouse está sobre ellos */ .navbar-nav
      .nav-link:hover, .navbar-nav .nav-link:focus { color: lightblue;
      text-decoration: none; } /* Estilos personalizados solo a los botones del
      lado derecho */ .navbar-nav .nav-link.btn { background-color: transparent;
      border: none; }
    </style>
  </head>
  <body>
    {{#if user}}
      <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a
                class="nav-link"
                aria-current="page"
                href="/api/products"
              >Inicio</a>
            </li>
          </ul>
          <ul class="navbar-nav">
            {{#if isAdmin}}
              <li class="nav-item">
                <a
                  class="nav-link btn btn-outline-primary"
                  href="/auth/adminView"
                >Perfil de Usuario</a>
              </li>
            {{/if}}
            {{#if isAdmin1}}
              <li class="nav-item">
                <a
                  class="nav-link btn btn-outline-primary"
                  href="/auth/adminView1"
                >Perfil de Usuario</a>
              </li>
            {{/if}}
            {{#if isAdmin2}}
              <li class="nav-item">
                <a
                  class="nav-link btn btn-outline-primary"
                  href="/auth/adminView2"
                >Perfil de Usuario</a>
              </li>
            {{/if}}
            <li class="nav-item">
              <a class="nav-link" href="/auth/logout">Cerrar sesión</a>
            </li>
          </ul>
        </div>
      </nav>
      {{{body}}}
      <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
      <script
        src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
        crossorigin="anonymous"
      ></script>
      <script src="/js/routeCart.js"></script>
    {{else}}
      {{{body}}}
    {{/if}}
  </body>
</html>