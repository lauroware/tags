<html lang="es">

  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{title}}</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
      crossorigin="anonymous"
    />
    <base href="/" />
    <link rel="stylesheet" href="css/{{style}}" />
    <style>
      /* Estilo para el contenedor principal de los tickets */ .containerTickets
      { margin-top: 20px; } /* Estilo para cada tarjeta de ticket */ .card {
      border: 1px solid #ccc; border-radius: 10px; margin-bottom: 20px;
      box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.2); } /* Estilo para el encabezado
      de la tarjeta */ .card-body { padding: 20px; } /* Estilo para las
      etiquetas en el encabezado */ .col-form-label { font-weight: bold; color:
      #333; } /* Estilo para el contenido en el encabezado */
      .form-control-plaintext { font-weight: normal; color: #555; }
    </style>
  </head>

  <body>
    {{#if user}}
      <div class="containerTickets">
        <div class="tickets">
          {{#each getTickets}}
            <div class="card">
              <div class="card-body">
                <div class="mb-3 row">
                  <label
                    for="staticDatetime"
                    class="col-sm-2 col-form-label"
                  >Fecha:</label>
                  <div class="col-sm-10">
                    <input
                      type="text"
                      readonly
                      class="form-control-plaintext"
                      id="staticDatetime"
                      value="{{this.purchase_datetime}}"
                    />
                  </div>
                </div>
                <div class="mb-3 row">
                  <label
                    for="staticCode"
                    class="col-sm-2 col-form-label"
                  >Codigo:</label>
                  <div class="col-sm-10">
                    <input
                      type="text"
                      readonly
                      class="form-control-plaintext"
                      id="staticCode"
                      value="{{this.code}}"
                    />
                  </div>
                </div>

                <div class="mb-3 row">
                  <label
                    for="staticAmount"
                    class="col-sm-2 col-form-label"
                  >$:</label>
                  <div class="col-sm-10">
                    <input
                      type="text"
                      readonly
                      class="form-control-plaintext"
                      id="staticAmount"
                      value="{{this.amount}}"
                    />
                  </div>
                </div>
              </div>
            </div>
          {{/each}}
        </div>
      </div>
      <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
      <script
        src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
        crossorigin="anonymous"
      ></script>
    {{else}}
      {{{body}}}
    {{/if}}
  </body>

</html>