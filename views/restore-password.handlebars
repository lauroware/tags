<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Recuperación de Contraseña</title>
    <!-- Hoja de estilo de Bootstrap y tu propio CSS personalizado -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      /* Estilo personalizado para el formulario de recuperación de contraseña
      */ .containerAuth { max-width: 400px; margin: 0 auto; padding: 20px;
      background-color: #fff; border: 1px solid #ddd; border-radius: 5px;
      box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1); text-align: center; /*
      Centrar el contenido */ } .containerAuth h1 { font-size: 2rem; color:
      #333; margin-bottom: 20px; } .containerAuth form { margin-top: 20px; }
      .containerAuth label { font-weight: bold; font-size: 1.2rem; color: #333;
      } .containerAuth .form-control { width: 100%; padding: 10px; margin: 10px
      0; border: 1px solid #ccc; border-radius: 5px; font-size: 1rem; }
      .containerAuth .btn { width: 100%; background-color: #000; /* Cambiar el
      color de fondo de los botones */ color: #fff; /* Cambiar el color del
      texto de los botones */ margin-top: 10px; padding: 10px; font-size: 1rem;
      } .containerAuth .btn:hover { background-color: #111; /* Cambiar el color
      de fondo al hacer hover */ }
    </style>
  </head>
  <body>
    <div class="containerAuth">
      <h1>Recuperación de contraseña</h1>
      <form class="form" role="form" autocomplete="off" id="formLogin">
        <div class="form-group">
          <label for="email">Ingresa tu correo electrónico:</label>
          <input
            id="email"
            name="email"
            placeholder="e-mail"
            class="form-control"
            type="email"
            required
          />
        </div>
        <div class="form-group">
          <label for="newPassword">Ingresa tu nueva contraseña:</label>
          <input
            id="newPassword"
            name="password"
            placeholder="password"
            class="form-control"
            type="password"
            required
          />
        </div>
        <div class="form-group">
          <input
            class="btn btn-success my-3"
            onclick="restorePassword()"
            value="Restaurar"
          />
        </div>
      </form>
      <div class="text-left">
        <button
          class="btn btn-success my-3"
          onclick="location.href = '/auth/login'"
        >Iniciar sesión</button>
      </div>
    </div>
  </body>
</html>

<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/js/restorePassword.js"></script>