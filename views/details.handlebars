<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Detalles del Producto</title>
    <!-- Agrega la hoja de estilo de Bootstrap y tu propio CSS personalizado -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      /* Estilo personalizado para containerDetails */ .containerDetails {
      text-align: center; margin: 20px auto; max-width: 400px; padding: 20px;
      background-color: #fff; border: 1px solid #ddd; border-radius: 10px;
      box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1); } .containerDetails h1 {
      font-size: 2rem; color: #333; margin-bottom: 10px; } .containerDetails h2
      { font-size: 1.5rem; color: #4CAF50; /* Color de la categoría, puedes
      ajustarlo */ margin-bottom: 10px; } .containerDetails img { max-width:
      100%; height: auto; margin: 20px 0; } .containerDetails h3 { font-size:
      1.2rem; color: #555; margin-bottom: 10px; } .containerDetails h4 {
      font-size: 1.3rem; color: #4CAF50; /* Color del precio, puedes ajustarlo
      */ margin-bottom: 10px; } .containerDetails h5 { font-size: 1rem; color:
      #666; margin-bottom: 20px; } .containerDetails .btn-success {
      background-color: #000000; color: #fff; border: none; font-weight: bold;
      padding: 10px 20px; border-radius: 5px; cursor: pointer; transition:
      background-color 0.3s; } .containerDetails .btn-success:hover {
      background-color: #464343; }
    </style>
  </head>
  <body>
    <div class="containerDetails container">
      <h1>{{product.title}}</h1>
      <h2>{{product.category}}</h2>
      <img src="{{product.thumbnail}}" alt="" />
      <h3>{{product.description}}</h3>
      <h4>Precio: ${{product.price}}</h4>
      <h5>Disponibles {{product.stock}} unidades</h5>
      <button
        class="btn btn-success my-3"
        onclick="addProductToCart('{{user.cartId}}','{{product._id}}')"
      >Agregar al carrito</button>
    </div>
    <!-- Agrega la librería de Bootstrap y jQuery (necesaria para Bootstrap) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"
    ></script>
    <script src="/js/cart.js"></script>
  </body>
</html>