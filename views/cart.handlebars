<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Carrito de Compras</title>
    <!-- Agrega la hoja de estilo de Bootstrap y tu propio CSS personalizado -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      /* Estilo personalizado para containerCart */ #containerCart { text-align:
      center; margin: 20px auto; max-width: 800px; padding: 20px;
      background-color: #fff; border: 1px solid #ddd; border-radius: 10px;
      box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1); } #containerCart h1 {
      font-size: 2rem; color: #333; margin-bottom: 20px; } .table { width: 100%;
      border-collapse: collapse; margin-top: 20px; } .table th, .table td {
      padding: 10px; text-align: center; } .cartProductImg { max-width: 100px;
      max-height: 100px; border: 1px solid #ddd; border-radius: 5px; }
      .btn-outline-danger { color: #dc3545; border-color: #dc3545; }
      .btn-outline-danger:hover { color: #fff; background-color: #000000;
      border-color: #dc3545; } .btn-outline-success { color: #28a745;
      border-color: #28a745; } .btn-outline-success:hover { color: #fff;
      background-color: #000000; border-color: #28a745; }
    </style>
  </head>
  <body>
    <div id="containerCart" class="container">
      <h1>Carrito de Compras</h1>
      {{#if productsInCart}}
        <div id="productsInCart" class="container-fluid">
          <table class="table table-hover">
            <thead>
              <tr>
                <th scope="col">Thumbnail</th>
                <th scope="col">Title</th>
                <th scope="col">Quantity</th>
                <th scope="col">Price</th>
                <th scope="col"></th>
              </tr>
            </thead>
            <tbody>
              {{#each productsInCart}}
                <tr>
                  <td>
                    <img
                      class="cartProductImg"
                      src="{{this.thumbnail}}"
                      alt="{{this.title}}"
                    />
                  </td>
                  <td>
                    <p>{{this.title}}</p>
                  </td>
                  <td id="cartQuantity">
                    <p>{{this.quantity}}</p>
                  </td>
                  <td>
                    <p>$ {{this.price}}</p>
                  </td>
                  <td><button
                      class="btn btn-outline-danger"
                      onclick="deleteProductInCart('{{this._id}}')"
                    >Eliminar</button>
                  </td>
                </tr>
              {{/each}}
            </tbody>
          </table>
          <button
            class="btn btn-outline-success"
            onclick="redirectToCheckout('{{user.cartId}}', '{{productCreatedBy}}')"
          >Finalizar Comprar</button>
        </div>
      {{/if}}
    </div>
    <!-- Agrega la librerÃ­a de Bootstrap y jQuery (necesaria para Bootstrap) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"
    ></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="/js/cart.js"></script>
  </body>
</html>