<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Productos de prueba</title>
    <!-- Agrega la hoja de estilo de Bootstrap y tu propio CSS personalizado -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      /* Estilo personalizado para containerProducts */ .containerProducts {
      text-align: center; margin: 20px auto; max-width: 800px; padding: 20px;
      background-color: #fff; border: 1px solid #ddd; border-radius: 10px;
      box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1); } .containerProducts h1 {
      font-size: 2rem; color: #333; margin-bottom: 20px; } .card { width: 18rem;
      margin: 20px; box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1); } .card img {
      max-height: 200px; } .card-title { font-size: 1.25rem; } .card-text {
      font-size: 1rem; margin-bottom: 10px; } .card-text:last-child {
      margin-bottom: 0; }
    </style>
  </head>
  <body>
    <div class="containerProducts container">
      <h1>Productos de prueba</h1>
      {{#if user}}
        <h1>Hola {{user.user}}</h1>
      {{else}}
      {{/if}}
      <div class="products d-flex flex-wrap justify-content-center">
        {{#each allProducts}}
          <div class="card">
            <img src={{this.thumbnail}} class="card-img-top" alt="..." />
            <div class="card-body d-flex flex-column align-items-center">
              <h5 class="card-title">{{this.title}}</h5>
              <p class="card-text">{{this.category}}</p>
              <p class="card-text">{{this.description}}</p>
              <p class="card-text">Last {{this.stock}} units</p>
              <p class="card-text">Price: ${{this.price}}</p>
            </div>
          </div>
        {{/each}}
      </div>
    </div>
    <!-- Agrega la librerÃ­a de Bootstrap y jQuery (necesaria para Bootstrap) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"
    ></script>
  </body>
</html>