<style>
  .containerAdmin { display: flex; flex-direction: column; align-items: center;
  } .usersAdmin, .productsAdmin { display: flex; flex-wrap: wrap;
  justify-content: center; } .card { width: auto; margin: 10px; } .footer {
  text-align: center; margin-top: 20px; }
</style>
<div class="containerAdmin">
  <h1>Hola</h1>
  <h2>
    Bienvenido
    {{user.email}}. Por favor actualiza tu correo electrónico, se te solicitará
    en caso de que necesites una nueva contraseña.
  </h2>

  <h3>Mi mascota:</h3>
  <!-- Button trigger modal -->

  <!-- Modal -->
  <div
    class="modal fade"
    id="exampleModal"
    tabindex="-1"
    aria-labelledby="exampleModalLabel"
    aria-hidden="true"
  >
    <!-- Modal content here -->
  </div>
  <div class="productsAdmin">
    {{!-- {{#each allProducts}} --}}
    <div class="card">
      <div class="card-body">
        <form class="form" role="form" autocomplete="off" id="formProductAdmin">
          <input
            class="form-control"
            type="hidden"
            name="productId"
            value="{{pets._id}}"
          />
          <label for="tag">Tag:</label>
          <input
            class="form-control"
            type="text"
            name="tag"
            value="{{pets.tag}}"
            readonly
          />
          <label for="tag">Email:</label>
          <input
            id="newEmail-{{pets._id}}"
            class="form-control"
            type="text"
            name="email"
            value="{{pets.email}}"
          />
          <label for="title">Nombre de la mascota:</label>
          <input
            id="newTitle-{{pets._id}}"
            class="form-control"
            type="text"
            name="title"
            value="{{pets.title}}"
          />
          <label for="thumbnail">Url de la foto:</label>
          <input
            id="newThumbnail-{{pets._id}}"
            type="text"
            name="thumbnail"
            value="{{pets.thumbnail}}"
          />
          <label for="description">Descripción:</label>
          <input
            id="newDescription-{{_id}}"
            class="form-control"
            type="text"
            name="description"
            value="{{pets.description}}"
          />
          <label for="fechadenacimiento">Fecha de nacimiento:</label>
          <input
            id="newFechadenacimiento-{{pets._id}}"
            class="form-control"
            type="text"
            name="fechadenacimiento"
            value="{{pets.fechadenacimiento}}"
          />
          <label for="medicamentos">Medicamentos:</label>
          <input
            id="newMedicamentos-{{pets._id}}"
            class="form-control"
            type="text"
            name="medicamentos"
            value="{{pets.medicamentos}}"
          />
          <label for="enfermedades">Historia clínica:</label>
          <input
            id="newEnfermedades-{{pets._id}}"
            class="form-control"
            type="text"
            name="enfermedades"
            value="{{pets.enfermedades}}"
          />
          <label for="nombredelhumano">Nombre de mi humano:</label>
          <input
            id="newNombredelhumano-{{pets._id}}"
            class="form-control"
            type="text"
            name="nombredelhumano"
            value="{{pets.nombredelhumano}}"
          />
          <label for="telefono">Teléfono:</label>
          <input
            id="newTelefono-{{pets._id}}"
            class="form-control"
            type="text"
            name="telefono"
            value="{{pets.telefono}}"
          />
        </form>
      </div>
      <div class="card-footer">
        <button
          type="button"
          class="btn btn-outline-success"
          onclick="updateProduct('{{pets._id}}')"
        >Actualizar</button>
        <a href="api/products/{{pets._id}}" class="btn btn-primary">Ver página
          pública</a>
      </div>
    </div>
    {{!-- {{/each}} --}}
  </div>
</div>

